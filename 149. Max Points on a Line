class Solution {
public:
    int maxPoints(vector<vector<int>>& p) {
        int n = p.size(), ans = 0;
        if (n <= 2) return n;

        for (int i = 0; i < n; i++) {
            map<pair<int,int>, int> m;
            int cur = 0;
            for (int j = i + 1; j < n; j++) {
                int dx = p[j][0] - p[i][0];
                int dy = p[j][1] - p[i][1];

                if (dx == 0) dy = 1;
                else if (dy == 0) dx = 1;
                else {
                    if (dx < 0) dx = -dx, dy = -dy;
                    int g = gcd(abs(dx), abs(dy));
                    dx /= g; dy /= g;
                }
                cur = max(cur, ++m[{dy, dx}]);
            }
            ans = max(ans, cur + 1);
        }
        return ans;
    }
};
