class Solution {
public:
    int nextNumber(int n) {
        int sum = 0;
        while (n > 0) {
            int digit = n % 10;
            sum += digit * digit;
            n /= 10;
        }
        return sum;
    }

    bool isHappy(int n) {
        int slow = n;
        int fast = n;

        do {
            slow = nextNumber(slow);           // move 1 step
            fast = nextNumber(nextNumber(fast)); // move 2 steps
        } while (slow != fast);

        return slow == 1;
    }
};
