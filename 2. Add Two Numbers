

class Solution {
public:
    ListNode* addTwoNumbers(ListNode* l1, ListNode* l2) {
        ListNode dummy;          // Dummy node for result list
        ListNode* tail = &dummy; // Pointer to the last node
        int carry = 0;           // Carry value

        // Traverse both lists
        while (l1 || l2 || carry) {
            int sum = carry;  // Start with carry

            if (l1) {
                sum += l1->val;
                l1 = l1->next;
            }
            if (l2) {
                sum += l2->val;
                l2 = l2->next;
            }

            carry = sum / 10; // Compute new carry
            sum = sum % 10;   // Current digit

            // Append new node to result
            tail->next = new ListNode(sum);
            tail = tail->next;
        }

        return dummy.next; // Return head of result list
    }
};
