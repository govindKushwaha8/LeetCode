/**
 * Definition for singly-linked list.
 * struct ListNode {
 *     int val;
 *     ListNode *next;
 *     ListNode() : val(0), next(nullptr) {}
 *     ListNode(int x) : val(x), next(nullptr) {}
 *     ListNode(int x, ListNode *next) : val(x), next(next) {}
 * };
 */

class Solution {
public:
    ListNode* mergeKLists(vector<ListNode*>& lists) {

        // Min-heap that stores (node->val, node)
        priority_queue<ListNode*, vector<ListNode*>, 
                       function<bool(ListNode*, ListNode*)>> pq(
                            [](ListNode* a, ListNode* b){
                                return a->val > b->val;
                            }
                       );

        // Push the head of each list
        for (auto node : lists) {
            if (node != nullptr)
                pq.push(node);
        }

        // Dummy head for merged list
        ListNode* dummy = new ListNode(0);
        ListNode* tail = dummy;

        while (!pq.empty()) {
            ListNode* top = pq.top();
            pq.pop();

            // Append to result
            tail->next = top;
            tail = tail->next;

            // Move in that list
            if (top->next != nullptr) {
                pq.push(top->next);
            }
        }

        return dummy->next;
    }
};
