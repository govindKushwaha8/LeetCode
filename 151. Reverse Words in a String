class Solution {
public:
    string reverseWords(string s) {
        int n = s.length();
        string ans = "";
        int i = n - 1;

        while (i >= 0) {
            // Skip spaces
            while (i >= 0 && s[i] == ' ')
                i--;

            if (i < 0) break;

            int j = i;
            // Find start of word
            while (j >= 0 && s[j] != ' ')
                j--;

            // Append word
            if (!ans.empty())
                ans += " ";
            ans += s.substr(j + 1, i - j);

            i = j - 1;
        }
        return ans;
    }
};
