class Solution {
public:
    vector<int> intersection(vector<int>& nums1, vector<int>& nums2) {
        unordered_set<int> s(nums1.begin(), nums1.end()); // store nums1 values
        unordered_set<int> result;                       // store unique intersection elements
        
        for (int num : nums2) {
            if (s.count(num)) {     // if exists in set
                result.insert(num); // insert unique value
            }
        }
        
        return vector<int>(result.begin(), result.end()); // convert to vector
    }
};
