class Solution {
public:
    int calculate(string s) {
        long long currNum = 0;
        long long lastNum = 0;
        long long result = 0;
        char op = '+';

        for (int i = 0; i < s.size(); i++) {
            char c = s[i];

            if (isdigit(c)) {
                currNum = currNum * 10 + (c - '0');
            }

            if ((!isdigit(c) && c != ' ') || i == s.size() - 1) {
                if (op == '+') {
                    result += lastNum;
                    lastNum = currNum;
                } else if (op == '-') {
                    result += lastNum;
                    lastNum = -currNum;
                } else if (op == '*') {
                    lastNum = lastNum * currNum;
                } else if (op == '/') {
                    lastNum = lastNum / currNum; // truncates toward zero
                }

                op = c;
                currNum = 0;
            }
        }

        return result + lastNum;
    }
};
