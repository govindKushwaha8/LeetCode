class Solution {
public:
    int countDigitOne(int n) {
        long long i = 1;
        int count = 0;

        while (i <= n) {
            long long higher = n / (i * 10);
            long long curr = (n / i) % 10;
            long long lower = n % i;

            if (curr == 0) {
                count += higher * i;
            } 
            else if (curr == 1) {
                count += higher * i + lower + 1;
            } 
            else {
                count += (higher + 1) * i;
            }

            i *= 10;
        }

        return count;
    }
};
